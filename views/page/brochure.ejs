<% layout('Boilerplate.ejs') %>

  <section class="section-projects">
    <div class="u-center-text  ">
      <h2 class="heading-secondary u-margin-top-medium u-margin-bottom-medium">
        Brochures
      </h2>
    </div>
    <ul class="gallery__list">
      <% data.forEach(function(d, idx) { %>
        <li class="gallery__list-item">
          <a href="<%= d.link%>" class="gallery__link gallery__link--color-primary">
            <h1 class="gallery__heading">
              Brochure-
              <%-idx+1 %>
            </h1>
          </a>
          <img src="/img/pdf.png" class="gallery__image--size-small" />
        </li>
        <% }); %>
    </ul>
  </section>